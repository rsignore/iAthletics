<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TextView android:layout_height="wrap_content" android:id="@+id/pubDate" android:text="Friday, September 3" android:gravity="right" android:layout_width="fill_parent"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/title" android:includeFontPadding="false" android:text="Douglas Byrd remains undefeated, 14-13 over Overhills"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/description" android:keepScreenOn="false" android:text="Douglas Byrd remains undefeated with the 14-13 win over improving Overhills."></TextView>
    
</LinearLayout>
