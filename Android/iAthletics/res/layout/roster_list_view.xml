<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:id="@+id/number" 
    	android:text="2" 
    	android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="fill_parent" android:layout_width="wrap_content" android:gravity="center_vertical">
    </TextView>
    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:paddingLeft="20dp" android:gravity="center_vertical" android:layout_gravity="left|center_vertical" android:layout_height="70dp" android:layout_width="wrap_content">
        <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:id="@+id/name" android:text="Robert Signore"></TextView>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/year"></TextView>
            <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/height" android:paddingLeft="5dp"></TextView>
            <TextView android:layout_height="wrap_content" android:id="@+id/weight" android:paddingLeft="5dp" android:layout_width="fill_parent" android:text="Weight"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/positions" android:freezesText="false" android:paddingLeft="20dp" android:text="88" android:layout_gravity="right|center_vertical" android:layout_width="fill_parent" android:gravity="right"></TextView>
    
</LinearLayout>
